{% extends 'layouts/base.html.twig' %}

{% block title %}{{ 'Edit :client'|trans({':client': client}) }}{% endblock %}

{% block body %}
    <div class="container-xl d-flex flex-column justify-content-center">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">{{ 'Edit :client'|trans({':client': client}) }}</h2>
                <div class="card-actions">
                    {{ include('client/_delete_form.html.twig') }}
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'id': 'form_' ~ form.vars.name}}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="card-footer d-flex">
                <a href="{{ path('app_client_index') }}" class="btn btn-link link-warning">
                    {{ ux_icon('tabler:arrow-back') }}
                    {{ 'Cancel'|trans }}
                </a>
                <button class="btn btn-primary ms-auto" type="submit" form="{{ 'form_' ~ form.vars.name }}">
                    {{ ux_icon('tabler:device-floppy') }}
                    {{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </div>
{% endblock %}
