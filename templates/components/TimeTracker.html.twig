<div {{ attributes }}>
    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'startTracker'
        }
    }) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-8">
                    {{ form_widget(form.description) }}
                </div>
                <div class="col-2">
                    {{ form_widget(form.project) }}
                </div>
                <div class="col d-flex align-items-center">
                    <h2 class="m-0 p-0">
                        <time>00:00:00</time>
                    </h2>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="btn-link" >
                        {{ ux_icon('tabler:player-play-filled', {width: '32px', height: '32px', class: 'text-success'}) }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    {% if activeTrackers|length > 0 %}
        <div class="card mt-4">
            <div class="card-header p-2">
                <h3 class="card-title">{{ 'Active Trackers' }}</h3>
            </div>
            <div class="card-body">
                <div class="divide-y">
                    {% for tracker in activeTrackers %}
                        <div>
                            <div class="row">
                                <div class="col-{{ tracker.project is not empty ? '8' : '10' }}">
                                    {{ tracker.description }}
                                </div>
                                {% if tracker.project is not empty %}
                                    <div class="col-2">
                                        {{ tracker.project }}<br />
                                        <small class="text-secondary">{{ tracker.project.client }}</small>
                                    </div>
                                {% endif %}
                                <div class="col d-flex align-items-center" {{ stimulus_controller('time-tracker')}} data-time-tracker-time-value="{{ tracker.dateStart.timestamp * 1000 }}">
                                    <h2 class="m-0 p-0"{{ stimulus_target('time-tracker', 'timer') }}>
                                        <time>00:00:00</time>
                                    </h2>
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="#" data-action="live#action:prevent" data-live-action-param="stopTimer" data-live-id-param="{{ tracker.id }}">
                                        {{ ux_icon('tabler:player-stop-filled', {width: '32px', height: '32px', class: 'text-danger'}) }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
